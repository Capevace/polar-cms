<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login</title>
  </head>
  <body>
    {{#if message}}
      <p>
        {{message}}
      </p>
    {{/if}}
    
    <form action="/login" method="post">
      Username:
      <input type="text" name="username">
      Password:
      <input type="password" name="password">

      <button type="submit">Login</button>
    </form>
  </body>
</html>
